{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://heimgewebe.local/schema/bundle-manifest.v1.schema.json",
  "title": "Bundle Manifest (bundle-manifest v1.0)",
  "description": "Root of Navigation for all artifacts.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "kind",
    "version",
    "run_id",
    "created_at",
    "generator",
    "artifacts",
    "links",
    "capabilities"
  ],
  "properties": {
    "kind": {
      "type": "string",
      "const": "repolens.bundle.manifest"
    },
    "version": {
      "type": "string",
      "const": "1.0"
    },
    "run_id": {
      "type": "string",
      "description": "Unique identifier for this specific generator run."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 UTC timestamp of creation."
    },
    "generator": {
      "type": "object",
      "required": [
        "name",
        "version",
        "config_sha256"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "config_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    },
    "artifacts": {
      "type": "array",
      "description": "List of artifacts in the bundle.",
      "items": {
        "type": "object",
        "required": [
          "role",
          "path",
          "content_type",
          "bytes",
          "sha256"
        ],
        "properties": {
          "role": {
            "type": "string",
            "enum": [
              "canonical_md",
              "index_sidecar_json",
              "chunk_index_jsonl",
              "dump_index_json",
              "sqlite_index",
              "retrieval_eval_json",
              "derived_manifest_json",
              "delta_json"
            ],
            "description": "Machine-readable enum role for this artifact."
          },
          "path": {
            "type": "string",
            "description": "Relative path to the artifact."
          },
          "content_type": {
            "type": "string",
            "description": "MIME or general content type."
          },
          "bytes": {
            "type": "integer",
            "minimum": 0
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "contract": {
            "type": "object",
            "description": "Contract reference metadata.",
            "additionalProperties": false,
            "required": [
              "id",
              "version"
            ],
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "version": {
                "type": "string",
                "minLength": 1
              }
            }
          },
          "interpretation": {
            "type": "object",
            "required": [
              "mode"
            ],
            "properties": {
              "mode": {
                "type": "string",
                "enum": [
                  "contract",
                  "role_only"
                ]
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false,
        "allOf": [
          {
            "if": {
              "required": [
                "contract"
              ]
            },
            "then": {
              "properties": {
                "interpretation": {
                  "properties": {
                    "mode": {
                      "const": "contract"
                    }
                  }
                }
              },
              "required": [
                "interpretation"
              ]
            }
          },
          {
            "if": {
              "properties": {
                "interpretation": {
                  "properties": {
                    "mode": {
                      "const": "role_only"
                    }
                  },
                  "required": [
                    "mode"
                  ]
                }
              },
              "required": [
                "interpretation"
              ]
            },
            "then": {
              "not": {
                "required": [
                  "contract"
                ]
              }
            }
          },
          {
            "if": {
              "properties": {
                "role": {
                  "enum": [
                    "index_sidecar_json",
                    "retrieval_eval_json",
                    "delta_json"
                  ]
                }
              },
              "required": [
                "role"
              ]
            },
            "then": {
              "required": [
                "contract",
                "interpretation"
              ],
              "properties": {
                "interpretation": {
                  "properties": {
                    "mode": {
                      "const": "contract"
                    }
                  }
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "interpretation": {
                  "properties": {
                    "mode": {
                      "const": "contract"
                    }
                  },
                  "required": [
                    "mode"
                  ]
                }
              },
              "required": [
                "interpretation"
              ]
            },
            "then": {
              "required": [
                "contract"
              ]
            }
          }
        ]
      }
    },
    "links": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "canonical_dump_index_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA256 of the canonical dump_index.json artifact, linking derived artifacts back to their source index."
        },
        "derived_from": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Graph edges back to origin sources."
        }
      }
    },
    "capabilities": {
      "type": "object",
      "properties": {
        "fts5_bm25": {
          "type": "boolean"
        },
        "redaction": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    }
  }
}
